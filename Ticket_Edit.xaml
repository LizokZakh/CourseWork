        <TextBox x:Name="tbTicketCode"  Grid.Column="1" HorizontalAlignment="Left" Height="37" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="566"/>
        <TextBox x:Name="tbUserCode" Grid.Column="1" HorizontalAlignment="Left" Height="37" Margin="0,10.2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="566" Grid.Row="1"/>
        <TextBox x:Name="tbEntryCode" Grid.Column="1" HorizontalAlignment="Left" Height="37" Margin="0,9.4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="566" Grid.Row="2"/>
